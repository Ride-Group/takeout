/**index.wxss**/
.wrap{
  padding: 0 20rpx 24rpx;
  background-color: #ffffff;
  margin: 20rpx
}

.new-icon{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  line-height: 30rpx;
  border-radius: 50%;
  background-color: red;
  color: #ffffff;
  font-size: 16rpx;
  text-align: center;
  vertical-align: center
}

.slot-dis{
  margin: 0 10rpx
}

.slot-title-wrap{
  display: flex;
  /* flex-direction: column */
  align-items: flex-start
}

.slot-title-dis{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
  padding: 10rpx 0
}

.slot-wrap{
  display: flex
}

.font-12{
  line-height: 20rpx;
  margin-right: 20rpx
}

.wrap .van-button{
  width: 100%; 
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #f7ab39, #fd4830);
  font-size: 32rpx;
  color: #ffffff;
  border: none
}

.font-24-r{
  margin: 0 10rpx
}

.dot-icon{
  width: 16rpx;
  height: 16rpx;
  color: red
}