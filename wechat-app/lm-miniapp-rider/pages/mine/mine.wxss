/* pages/mine/mine.wxss */

.mine-header {
  position: relative;
}

.mine-header-image {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  z-index: -1;
}

.mine-header-content {
  display: flex;
  padding: 30rpx 20rpx;
}

.content__left {
  margin-right: 30rpx;
}

.content__left .avatar {
  width: 120rpx;
  height: 120rpx;
}

.content__right {
  flex: 1;
  color: #ffffff;
}

.user-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-title .title {
  font-size: 36rpx;
}

.user-title .iconfont {
  margin-left: 20rpx;
}

.user-status {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.user-status .iconfont {
  margin-left: 12rpx;
}


.user-credit {
  margin-top: 8px;
}

.user-grade {
  margin-top: 18px;
}

.mine-tool {
  display: flex;
  background: #ffffff;
  height: 90px;
  align-items: center;
}

.mine-tool-item {
  flex: 1;
  text-align: center;
}

.mine-tool-item .value {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #000000;
}

.value-icon {
  margin-left: 10rpx;
}

.mine-tool-item .title {
  font-size: 24rpx;
}

.gz-cell-group .icon-image {
  width: 24px;
  height: 24px;
  margin-right: 20rpx;
}
